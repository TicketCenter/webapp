{% extends "BaseView.twig" %}
{% block head %}
{% endblock head %}
{% block content %}
<div class="login-container">
	<form class="login-form" method="post" action="{{ route('handleLogin') }}">
		<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control email-input" name="email" placeholder="Enter email">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control password-input" name="password" placeholder="Password">
		</div>
		<div class="checkbox">
			<label>
				<input type="checkbox"> Remember me
			</label>
		</div>
		<button type="submit" class="btn btn-default">Login</button>
	</form>
</div>
{% endblock content %}
