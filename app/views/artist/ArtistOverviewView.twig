{% extends "BaseView.twig" %}
{% block head %}
<link rel="stylesheet" href="{{ asset('css/artistOverview.min.css') }}" type="text/css" media="screen">
{% endblock head %}
{% block content %}
<div class="col-md-12 borderframe search">
	<div class="search-box">
		<input type="text" class="form-control input-lg" placeholder="Zoeken op artiest(en)" value="{{search}}">
		<button class="btn btn-lg btn-primary">Zoek</button>
	</div>
</div>
<div class="col-md-12 borderframe overview">
	<div class="artists">
		{% if artists != null %}
		{% for artist in artists %}
		<div class="artist" data-name="{{ artist.name }}"><img class="lazy" data-original="{{ artist.image.url }}" width="42" height="42">{{ artist.name }}</div>
		{% endfor %}
		{% else %}
		Geen artiesten gevonden.
		{% endif %}
	</div>
	{% if artists != null %}
	<div class="load-more"><button class="btn btn-lg btn-default">Meer laden</button></div>
	{% endif %}
</div>
{% endblock content %}
{% block javascript %}
<script type="text/javascript" src="{{ asset('packages/lazyload/lazyload.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/artistOverview.min.js') }}"></script>
{% endblock javascript %}